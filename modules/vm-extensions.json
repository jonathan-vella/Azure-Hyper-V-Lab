    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "vmName": {
      "type": "string",
      "metadata": {
        "description": "The name of the VM resource"
      }
    },
    "dscFileUrl": {
      "type": "string",
      "defaultValue": "https://github.com/jonathan-vella/Azure-Hyper-V-Lab/raw/main/dsc/DSCInstallWindowsFeatures.zip",
      "metadata": {
        "description": "URL to the DSC configuration file. Update this with your own GitHub username when forking the repository."
      }
    },
    "customScriptUrl": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/jonathan-vella/Azure-Hyper-V-Lab/main/src/scripts/HostConfig.ps1",
      "metadata": {
        "description": "URL to the custom script file. Update this with your own GitHub username when forking the repository."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2023-09-01",
      "name": "[format('{0}/InstallWindowsFeatures', parameters('vmName'))]",
      "location": "[parameters('location')]",
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.77",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "wmfVersion": "latest",
          "configuration": {
            "url": "[parameters('dscFileUrl')]",
            "script": "DSCInstallWindowsFeatures.ps1",
            "function": "InstallWindowsFeatures"
          }
        }
      },
      "metadata": {
        "description": "Deployment of DSC Configuration. Enablement of Hyper-V and DHCP Roles along with RSAT Tools."
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2023-09-01",
      "name": "[format('{0}/HostConfiguration', parameters('vmName'))]",
      "location": "[parameters('location')]",
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "CustomScriptExtension",
        "typeHandlerVersion": "1.10",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
            "[parameters('customScriptUrl')]"
          ],
          "commandToExecute": "powershell -ExecutionPolicy Unrestricted -File HostConfig.ps1"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines/extensions', split(format('{0}/InstallWindowsFeatures', parameters('vmName')), '/')[0], split(format('{0}/InstallWindowsFeatures', parameters('vmName')), '/')[1])]"
      ],
      "metadata": {
        "description": "Custom Script Execution. Configuration of Server Roles, installation of Chocolatey and deployment of software."
      }
    }
  ],
  "outputs": {
    "dscExtensionId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/virtualMachines/extensions', split(format('{0}/InstallWindowsFeatures', parameters('vmName')), '/')[0], split(format('{0}/InstallWindowsFeatures', parameters('vmName')), '/')[1])]"
    },
    "customScriptExtensionId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/virtualMachines/extensions', split(format('{0}/HostConfiguration', parameters('vmName')), '/')[0], split(format('{0}/HostConfiguration', parameters('vmName')), '/')[1])]"
    }
  }
