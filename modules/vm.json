{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.34.44.8038",
      "templateHash": "15391665995146541217"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "computerName": {
      "type": "string",
      "metadata": {
        "description": "Name of Hyper-V Host Virtual Machine"
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin Username for the Host Virtual Machine"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin User Password for the Host Virtual Machine"
      }
    },
    "vmSize": {
      "type": "string",
      "metadata": {
        "description": "Size of the Host Virtual Machine"
      }
    },
    "networkInterfaceId": {
      "type": "string",
      "metadata": {
        "description": "Network interface ID for the VM"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2023-09-01",
      "name": "[parameters('computerName')]",
      "location": "[parameters('location')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true
          }
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "2025-datacenter-g2",
            "version": "latest"
          },
          "osDisk": {
            "name": "[format('{0}-OsDisk', parameters('computerName'))]",
            "createOption": "FromImage",
            "deleteOption": "Delete",
            "managedDisk": {
              "storageAccountType": "Premium_LRS"
            },
            "caching": "ReadWrite"
          },
          "dataDisks": [
            {
              "lun": 0,
              "name": "[format('{0}-DataDisk1', parameters('computerName'))]",
              "createOption": "Empty",
              "diskSizeGB": 512,
              "caching": "ReadOnly",
              "deleteOption": "Delete",
              "managedDisk": {
                "storageAccountType": "Premium_LRS"
              }
            }
          ]
        },
        "osProfile": {
          "computerName": "[parameters('computerName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "securityProfile": {
          "uefiSettings": {
            "secureBootEnabled": true,
            "vTpmEnabled": true
          },
          "securityType": "TrustedLaunch"
        },
        "priority": "Spot",
        "evictionPolicy": "Deallocate",
        "billingProfile": {
          "maxPrice": -1
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[parameters('networkInterfaceId')]",
              "properties": {
                "primary": true,
                "deleteOption": "Delete"
              }
            }
          ]
        }
      },
      "tags": {
        "purpose": "hyper-v-lab"
      },
      "metadata": {
        "description": "Deployment of Virtual Machine with Nested Virtualization"
      }
    }
  ],
  "outputs": {
    "vmId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/virtualMachines', parameters('computerName'))]"
    },
    "vmName": {
      "type": "string",
      "value": "[parameters('computerName')]"
    }
  }
}